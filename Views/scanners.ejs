<%- include('partials/header.ejs') -%>
<%- include('partials/navbar.ejs') -%>

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col">
                <h2>Manage Scanners</h2>
            </div>
            <div class="col-offset-1 mr-2">
                <button class="btn btn-success" data-toggle="modal" data-target="#addNewScanner">Add New</button>
                <div class="modal fade" id="addNewScanner" tabindex="-1" role="dialog" aria-labelledby="addNewScannerTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="addNewScannerTitle">Add New Scanner</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-row">
                                        <div class="form-group col">
                                            <label for="name">Name</label>
                                            <input type="text" name="name" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col">
                                            <label for="ipAddress">IP Address</label>
                                            <input type="text" name="ipAddress" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-6">
                                            <label for="username">Username</label>
                                            <input type="text" name="username" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-6">
                                            <label for="password">Password</label>
                                            <input type="password" name="password" class="form-control">
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-success">Create new</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-offset-1 mr-5">
                <button class="btn btn-dark">Filter</button>
            </div>
        </div>
        <div class="row my-1">
            <div class="col-12">
                <hr class="top-hr">
            </div>
        </div>
    </div>
    <% if (scanners) { %>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col"><span class="text-nowrap">Scanner Name</span></th>
                    <th scope="col"><span class="text-nowrap">IP Address</span></th>
                    <th scope="col"><span class="text-nowrap">Status</span></th>
                    <th scope="col"><span class="text-nowrap">Version</span></th>
                    <th scope="col"><span class="text-nowrap">Type</span></th>
                    <th scope="col"><span class="text-nowrap"></span></th>
                </tr>
            </thead>
            <tbody>
    <% scanners.forEach(function(scanner) { %>
                <tr>
                    <td><span class="text-nowrap"><%= scanner.name %></span></td>
                    <td><span class="text-nowrap"><%= scanner.ip %></span></td>
                    <td><span class="text-nowrap"><%= scanner.status %></span></td>
                    <td><span class="text-nowrap"><%= scanner.version %></span></td>
                    <td><span class="text-nowrap"><%= scanner.type %></span></td>
                    <td><span class="text-nowrap"><button class="btn btn-danger">Delete</button></span></td>
                </tr>
    <% }); %>
    <% } %>
            </tbody>
        </table>
    </div>
<%- include('partials/footer.ejs') -%>